<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:padding="20dp"
    tools:context=".tutor_home">



    <!-- Welcome Message -->
    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Welcome, Tutor!"
        android:textColor="#2E7D32"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Wallet Balance Placeholder Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/ewalletCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        android:backgroundTint="#E8F5E9"
        app:layout_constraintTop_toBottomOf="@id/welcomeText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/discount"
                android:contentDescription="Wallet Icon"
                app:tint="#2E7D32"/>

            <TextView
                android:id="@+id/balancePlaceholder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E-Wallet Balance"
                android:textColor="#2E7D32"
                android:textSize="18sp"
                android:layout_marginStart="12dp"
                android:textStyle="bold" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/ewalletCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnEditProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#4CAF50"
            android:text="Manage Profile"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnSetAvailability"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Set Availability"
            android:textStyle="bold"
            android:backgroundTint="#4CAF50"
            android:textColor="#ffffff"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btnScheduleSession"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Schedule"
            android:textStyle="bold"
            android:backgroundTint="#4CAF50"
            android:textColor="#ffffff"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btnViewBookedSessions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Booked Sessions"
            android:textStyle="bold"
            android:backgroundTint="#43A047"
            android:textColor="#ffffff"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:textStyle="bold"
            android:backgroundTint="#D32F2F"
            android:textColor="#ffffff"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
