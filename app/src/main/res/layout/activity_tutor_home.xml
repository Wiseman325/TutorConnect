<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:padding="20dp"
    tools:context=".tutor_home">

    <!-- Welcome Text -->
    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Welcome, Tutor!"
        android:textColor="#2E7D32"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Wallet Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/ewalletCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        android:backgroundTint="#E8F5E9"
        app:layout_constraintTop_toBottomOf="@id/welcomeText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/discount"
                android:contentDescription="Wallet Icon"
                app:tint="#2E7D32"/>

            <TextView
                android:id="@+id/balancePlaceholder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E-Wallet Balance"
                android:textColor="#2E7D32"
                android:textSize="18sp"
                android:layout_marginStart="12dp"
                android:textStyle="bold" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Centered 2x2 Button Grid -->
    <GridLayout
        android:id="@+id/buttonGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:alignmentMode="alignMargins"
        android:useDefaultMargins="true"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/ewalletCard"
        app:layout_constraintBottom_toTopOf="@id/btnLogout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnEditProfile"
            android:layout_width="140dp"
            android:layout_height="80dp"
            android:text="Manage Profile"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_margin="8dp"
            android:elevation="4dp"
            android:background="@drawable/button_background"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSetAvailability"
            android:layout_width="140dp"
            android:layout_height="80dp"
            android:text="Set Availability"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_margin="8dp"
            android:elevation="4dp"
            android:background="@drawable/button_background" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnScheduleSession"
            android:layout_width="140dp"
            android:layout_height="80dp"
            android:text="My Schedule"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_margin="8dp"
            android:elevation="4dp"
            android:background="@drawable/button_background" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnViewBookedSessions"
            android:layout_width="140dp"
            android:layout_height="80dp"
            android:text="Booked Sessions"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_margin="8dp"
            android:elevation="4dp"
            android:background="@drawable/button_background" />
    </GridLayout>

    <!-- Logout Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnLogout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:text="Logout"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
